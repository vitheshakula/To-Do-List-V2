<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>To Do List</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="box">
    <h1>To Do List</h1>

    <div class="task-list">
      <% tasks.forEach(function(task) { %>
        <div class="task-item">
          <form action="/toggle" method="POST" class="task-form">
            <input type="hidden" name="id" value="<%= task._id %>">
            <input
              type="checkbox"
              onchange="this.form.submit()"
              <%= task.completed ? 'checked' : '' %>
            />
            <label class="<%= task.completed ? 'completed' : '' %>">
              <%= task.name %>
            </label>
          </form>
          <form action="/delete" method="POST">
            <input type="hidden" name="id" value="<%= task._id %>">
            <button class="delete-btn" type="submit">X</button>
          </form>
        </div>
      <% }); %>
    </div>

    <form action="/" method="POST" class="add-task-form">
      <input type="text" name="taskName" placeholder="Add a new task" required />
      <button type="submit">+</button>
    </form>
  </div>
</body>
</html>
